{
  "services": {
    "frontend": {
      "context": "./frontend",
      "dockerfile": "Dockerfile",
      "image_name": "wms-frontend",
      "build_args": {
        "NODE_ENV": "production"
      },
      "ports": ["3000:3000"],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:3000/api/health"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    },
    "backend": {
      "context": "./backend",
      "dockerfile": "Dockerfile",
      "image_name": "wms-backend",
      "build_args": {
        "NODE_ENV": "production"
      },
      "ports": ["3001:3001"],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:3001/health"],
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      }
    }
  },
  "registry": {
    "url": "",
    "namespace": "wms"
  },
  "build_options": {
    "default_platform": "linux/amd64",
    "cache_from": [],
    "cache_to": [],
    "build_kit": true
  },
  "environments": {
    "development": {
      "tag_suffix": "-dev",
      "build_args": {
        "NODE_ENV": "development"
      }
    },
    "staging": {
      "tag_suffix": "-staging",
      "build_args": {
        "NODE_ENV": "staging"
      }
    },
    "production": {
      "tag_suffix": "",
      "build_args": {
        "NODE_ENV": "production"
      }
    }
  }
}